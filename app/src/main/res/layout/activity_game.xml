<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="X score" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Draws" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="O score" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txvXScoreID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="#AFA6A8"
            android:gravity="center"
            android:text="0"
            android:textColor="#1669BD"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvDrawsID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="#AFA6A8"
            android:gravity="center"
            android:text="0"
            android:textColor="#1669BD"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvOScoreID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="#AFA6A8"
            android:gravity="center"
            android:text="0"
            android:textColor="#1669BD"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txvTurnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:gravity="center"
        android:text="X Turn"
        android:textColor="#0A33DB"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn00ID"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:textColor="@android:color/black"
                android:text=""
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                />

            <Button
                android:id="@+id/btn01ID"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:text=""
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                />

            <Button
                android:id="@+id/btn02ID"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:text=""
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn10ID"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:textColor="@android:color/black"
                android:text=""
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                />

            <Button
                android:id="@+id/btn11ID"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:text=""
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btn12ID"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:text=""
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn20ID"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:textColor="@android:color/black"
                android:text=""
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                />

            <Button
                android:id="@+id/btn21ID"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:text=""
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                />

            <Button
                android:id="@+id/btn22ID"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:text=""
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnPlayAgainID"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:text="Play Again!" />

</LinearLayout>